@model Tarefa

<h1>Adicionar produto</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="NomeTarefa" class="control-label"></label>
                <input asp-for="NomeTarefa" class="form-control" />
                <span asp-validation-for="NomeTarefa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtCad" class="control-label"></label>
                <input asp-for="DtCad" class="form-control" />
                <span asp-validation-for="DtCad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtCadFim" class="control-label"></label>
                <input asp-for="DtCadFim" class="form-control" />
                <span asp-validation-for="DtCadFim" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-success">Criar</button>
        </form>
    </div>
</div>

<div>
    <br />
    <a class="btn btn-secondary" asp-action="ToDo">Voltar</a>
</div>